<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form.html", changeset: @changeset, action: user_path(@conn, :update, @user), submit_caption: "Save change" %>

    <div class="gravatar_edit">
      <%= img_tag(gravatar_for(@user), class: "gravatar") %>
      <%= link("change", to: "http://gravatar.com/emails", target: "_blank") %>
    </div>
  </div>
</div>
